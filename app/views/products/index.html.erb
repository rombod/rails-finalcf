<p id="notice"><%= notice %></p>

<h1 class ="products">Listing Products</h1>

<table>
  <div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        
        <p class="comp"><%= product.name %></p>
        <p class="comp"><%= product.description %></p>        
        <p class="comp"><%= product.colour %></p>
        <p class="comp"><%= product.price %></p>

        

              
        <a><%= link_to 'Show', product, class: "btn" %></a>
        <a><%= link_to 'Edit', edit_product_path(product), class: "btn" %></a>
        <a><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></a>
        

      

      </div><!-- /col -->
     <% end %>
    </div>
   </div>
</table>

